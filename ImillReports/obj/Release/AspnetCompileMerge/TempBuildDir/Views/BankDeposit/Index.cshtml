            var excelExportProperties = {
                fileName: "BankDeposit.xlsx"
            };
            gridObj.excelExport(excelExportProperties);
        }
    }

    function formatDateToString(date) {
        var dd = (date.getDate() < 10 ? '0' : '')
            + date.getDate();

        var MM = ((date.getMonth() + 1) < 10 ? '0' : '')
            + (date.getMonth() + 1);

        return dd + "-" + MM + "-" + date.getFullYear();
    } 


    function actionComplete(args) {

        if (args.requestType === 'save') {

            var date = formatDateToString(new Date(args.data.TransDate));
            var transDate = JSON.stringify(date).slice(1, 11);

            $.ajax({
                type: 'POST',
                data: {
                    oid: args.data.Oid,
                    transDate: transDate,
                    misc: args.data.Misc,
                    misc2: args.data.Misc2,
                    cash: args.data.Cash,
                    depositBy: args.data.DepositBy
                },
                url: '@Url.Action("Update", "BankDeposit")',
                success: function (response) {
                    console.log('resp : ', response);
                    if (response == false) {
                        alert("Error occured while saving!");
                    }
                },
                error: function (ex) {
                    alert(ex);
                }
            });
        }
    }
