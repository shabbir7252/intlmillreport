<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="International Mill Report Application">

    <title>@ViewBag.Title</title>

    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    @Styles.Render("~/bundles/Bootstrap")
    <link href="~/Content/stylesheets/main.css" rel="stylesheet" />
    @Styles.Render("~/bundles/ReportStyles")

</head>
<body class="theme-cyan index2">



    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
            <p>Please wait...</p>
            <div class="m-t-30">
                <img src="~/Content/Images/InternationalMill.jpg" alt="Imill logo" width="48" height="48" />
            </div>
        </div>
    </div>

    <!-- Top Bar -->
    <nav class="navbar">
        <div class="col-12">

            <div class="navbar-header">
                <a href="javascript:void(0);" class=" h-bars"></a>
                <a class="navbar-brand" href="#">
                    <div class="row">
                        <div class="col-8"> <img src="~/Content/Images/logo_black.png" class="img-fluid" /></div>
                    </div>
                </a>
            </div>

            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    @*<li><a href="@Url.Action("LogOff", "Account")" class="mega-menu xs-hide" data-close="true"><i class="zmdi zmdi-power"></i></a></li>*@
                    <li style="margin-right: 20px;padding-top: 16px;">
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <a style="color: #fff;" href="javascript:document.getElementById('logoutForm').submit()" class="mega-menu xs-hide" data-close="true"><i class="zmdi zmdi-power"></i></a>
                        }
                    </li>
                }
            </ul>
        </div>
    </nav>

    @if (User.Identity.IsAuthenticated)
    {

        <div class="menu-container">

            <div class="menu">
                <ul class="pullDown">
                    @if (User.IsInRole("Admin") || User.IsInRole("HO"))
                    {
                        <li><a href="@Url.Action("BranchSales", "Dashboard")"><i class="zmdi zmdi-view-dashboard"></i> <span>Dashboard</span></a></li>

                        @*<li>
                <a href="javascript:void(0);"><i class="zmdi zmdi-view-dashboard"></i> <span>Dashboard</span></a>
                <ul class="pullDown">
                    <li><a href="@Url.Action("Index", "Dashboard")">General</a></li>
                    <li><a href="@Url.Action("BranchSales", "Dashboard")">Branch Sales</a></li>
                </ul>
            </li>*@
                    }
                    <li>
                        <a href="javascript:void(0);"><i class="zmdi zmdi-assignment"></i> <span>Sales Reports</span></a>
                        <ul class="pullDown">
                            <li><a href="@Url.Action("Index", "SalesReport")">Sales Report</a></li>
                            <li><a href="@Url.Action("SalesDetailReport", "SalesReport")">Sales Detail Report</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a href="@Url.Action("SalesHourlyReport", "SalesReport")">Sales Hourly Report</a></li>
                            }
                        </ul>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="javascript:void(0);"><i class="zmdi zmdi-assignment"></i> <span>Cash Register</span></a>
                            <ul class="pullDown">
                                <li><a href="@Url.Action("Index", "CashRegister")">Cash Register Report</a></li>
                                <li><a href="@Url.Action("CashRegVsSalesRpt", "CashRegister")">Cash Register Vs Sales Report</a></li>
                            </ul>
                        </li>

                        <li>
                            <a href="javascript:void(0);"><i class="zmdi zmdi-time" style="vertical-align: text-bottom;"></i> <span>Time Attendance</span></a>
                            <ul class="pullDown">
                                <li><a href="@Url.Action("Index", "TAReport")">Time Attendance Report</a></li>
                                <li><a href="@Url.Action("AllocateShiftLocation", "ManageTimeAttendance")">Allocation</a></li>
                                <li><a href="@Url.Action("Employees", "ManageTimeAttendance")">Employees</a></li>
                                <li><a href="@Url.Action("Locations", "ManageTimeAttendance")">Locations</a></li>
                                <li><a href="@Url.Action("Shifts", "ManageTimeAttendance")">Shifts</a></li>
                            </ul>
                        </li>
                    }


                </ul>
            </div>
        </div>
    }

