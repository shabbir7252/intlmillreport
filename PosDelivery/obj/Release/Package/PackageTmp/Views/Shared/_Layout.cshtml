<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - POS Delivery</title>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">*@
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />


</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">International Mill</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li>
                            <a class="nav-link active" aria-current="page" href="@Url.Action("AddNewOrder", "Home")">Add Order</a>
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", }))
                            {
                                @Html.AntiForgeryToken()
                                <a style="color: #000;" href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-outline-primary" data-close="true">Logout</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Content/bootstrap/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
