@model IntlmillReports.Models.User

@*@{
    ViewBag.Title = "Login";
    ViewBag.SubTitle = "Please login to continue";
}*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-3 mx-auto">
                <div class="row">
                    <div class="col-6 mx-auto">
                        <img class="img-fluid" src="~/Content/Images/InternationalMill.png" alt="Imill logo" />
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="body">

                        <div class="row">
                            <div class="col-12">
                                <h4 class="text-center">LOGIN</h4>
                            </div>
                        </div>

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-12" })
                                <div class="col-12">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style="border-radius: 5px; border: 1px solid grey; padding: 0 10px;" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-12 mt-3" })
                                <div class="col-12">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @style="border-radius: 5px; border: 1px solid grey; padding: 0 10px;" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-3 mx-auto mt-3">
                                    <input type="submit" value="Login" class="btn btn-raised bg-black waves-effect waves-light" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

