@model IEnumerable<Cash_Register.ViewModels.CRegister>

@{
    ViewBag.Title = "Records";
}

@if (ViewBag.Message != null)
{
    <div class="row">
        <div class="col-4 text-center mx-auto">
            <div class="alert alert-warning text-center" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-11 mx-auto">
        <div class="row">
            <div class="col-6">
                <h4 class="mb-0 pt-1">Cash Register System | نظام كشف الصندوق</h4>
            </div>
            <div class="col-6 text-right">
                <div class="row">
                    <div class="col-9 pt-2">
                        <h6><span class="pl-2">@ViewBag.CRLocationAr</span> | <span class="pr-2">@ViewBag.Salesman</span></h6>
                    </div>
                    <div class="col-3">
                        <Button class="btn btn-primary" onclick="GoBack()">Back</Button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />


<div class="row">
    <div class="col-11">
        <table class="table table-sm table-bordered text-center">
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Oid)
                    </th>*@
                <th>
                    Transaction Date
                </th>
                <th>
                    Staff Date
                </th>
                <th>
                    Shift Type
                </th>
                <th>
                    Net Balance
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model.OrderByDescending(x => x.TransDate))
            {
                <tr>
                    <td>
                        @item.TransDate.ToString("dd-MM-yyyy hh:mm:ss tt")
                    </td>
                    <td>
                        @item.StaffDate.ToString("dd-MM-yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShiftType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NetBalance)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "CashRegister", new { oid = item.Oid }, null) 
                        @*@Html.ActionLink("Delete", "Delete", "CashRegister", new { oid = item.Oid, salesmanOid = item.Salesman }, new { onclick = "return confirm('Are you sure you wish to delete this record\\nهل تريد حذف هذا السجل؟?');" }) |*@
                        <a class="text-danger mx-3" href="#" data-toggle="modal" data-target="#exampleModal-@item.Oid">Delete</a> 
                        @Html.ActionLink("Print", "Print", "CashRegister", new { oid = item.Oid }, null)

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal-@item.Oid" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Entry : @item.StaffDate.ToString("dd-MM-yyyy") | @item.ShiftType | @Html.DisplayFor(modelItem => item.NetBalance) KD</h5>
                                        <button type="button" class="close pb-0" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true" style="font-size: xxx-large;top: -15px;position: relative;">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h3>هل أنت متأكد من حذف؟</h3>
                                                <h4>Delete this record?</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">No --- لا</button>
                                        @using (Html.BeginForm("Delete", "CashRegister", new { oid = item.Oid, salesmanOid = item.Salesman }))
                                        {
                                            <button type="submit" class="btn btn-danger">Delete --- حذف</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>



@section scripts {
    <script>
        function GoBack() {
            var link = "@Url.Action("Index", "CashRegister")"
                            window.location.href = link;
        }
    </script>
}