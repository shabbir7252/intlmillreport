            var link = "@Url.Action("GetTransactionDetails", "Home", new { entryId = -1 })";
            link = link.replace('-1', args.rowData.EntryId);
            window.location.href = link;
        }*@

        function commandClick(args) {
            var type = args.commandColumn.type;
            if (type === 'Edit') {
                var link = "@Url.Action("GetTransactionDetails", "Home", new { entryId = -1 })";
                link = link.replace('-1', args.rowData.EntryId);
                window.location.href = link;
            }
        }

    </script>
}